<%= form_for(pin) do |f| %>
  <% if pin.errors.any? %>
    <div class="table-responsive">
      <div id="error_explanation">
        <h2><%= pluralize(pin.errors.count, "errores") %> detectados durante la operación:</h2>

        <ul>
        <% pin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="col-md-6 col-md-offset-4">
    <div class="col-xs-10 col-sm-9 col-md-7 col-lg-7 datos-login">
      <div class="row col-xs-12">

        <div class="field">
          <%= label_tag :name , { class: "text-azul", for: "pin_name"} do %>
            <span class="fa fa-asterisk icono-10" aria-hidden="true" data-toggle="tooltip" title="Obligatorio"> </span> Nombre
          <% end %>
          <%= f.text_field :name , :class => "form-control", :placeholder => "Nombre de la foto" %>
        </div>

        <div class="field">
          <%= label_tag :photo , { class: "text-azul", for: "pin_photo"} do %>
            <span class="fa fa-asterisk icono-10" aria-hidden="true" data-toggle="tooltip" title="Obligatorio"> </span> Foto
          <% end %>
          <%= f.text_field :photo , :class => "form-control", :placeholder => "Url de la foto" %>
        </div>

        <div class="field">
          <%= label_tag :description , { class: "text-azul", for: "pin_description"} do %>
            <span class="fa fa-asterisk icono-10" aria-hidden="true" data-toggle="tooltip" title="Obligatorio"> </span> Descripción
          <% end %>
          <%= f.text_area :description , :class => "form-control", :placeholder => "Descripción" %>
        </div>

        <div class="actions">
          <%= button_to "Aceptar", {method: :post, class: "btn btn-verde btn-sm text-blanco"} do %>
            <span class="fa fa-check-circle icono-20" aria-hidden="true"> </span> Aceptar
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
